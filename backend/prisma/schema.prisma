generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  firstName    String?   @map("first_name")
  lastName     String?   @map("last_name")
  name         String
  email        String    @unique
  passwordHash String?   @map("password_hash")
  googleId     String?   @unique @map("google_id")
  role         String    @default("CUSTOMER")
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  bookings     Booking[]

  @@index([createdAt])
  @@index([email])
  @@index([role])
  @@map("users")
}

model Tour {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  description   String
  priceAdult    Float     @map("price_adult")
  priceChild    Float     @map("price_child")
  language      String
  coverImage    String    @map("cover_image")
  images        String?
  gallery       String?
  dateStart     DateTime  @map("date_start") @db.Timestamptz(6)
  dateEnd       DateTime  @map("date_end") @db.Timestamptz(6)
  itinerary     String
  terms         String
  includes      String?
  excludes      String?
  durationValue Int?      @map("duration_value")
  durationUnit  String?   @map("duration_unit")
  maxSeats      Int       @map("max_seats")
  difficulty    String?
  isMultiDay    Boolean?  @default(false) @map("is_multi_day")
  whatsappLink  String?   @map("whatsapp_link")
  gpxTrack      String?   @map("gpx_track")
  latitude      Float?    @map("latitude")
  longitude     Float?    @map("longitude")
  createdBy     String?   @map("created_by")
  createdAt     DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  bookings      Booking[]

  @@index([createdAt])
  @@index([createdBy])
  @@index([dateEnd])
  @@index([dateStart])
  @@index([language])
  @@index([slug])
  @@map("tours")
}

model Booking {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  tourId        String   @map("tour_id")
  adults        Int
  children      Int      @default(0)
  totalPrice    Float    @map("total_price")
  paymentStatus String   @default("PENDING") @map("payment_status")
  paymentMethod String   @default("ONSITE") @map("payment_method")
  qrCode        String   @unique @map("qr_code")
  notes         String?
  checkedIn     Boolean  @default(false) @map("checked_in")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  tour          Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([checkedIn])
  @@index([createdAt])
  @@index([paymentStatus])
  @@index([qrCode])
  @@index([tourId])
  @@index([userId, createdAt])
  @@index([userId])
  @@map("bookings")
}

model Notification {
  id        String   @id @default(uuid())
  type      String
  payload   String
  seen      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([createdAt])
  @@index([seen, createdAt])
  @@index([seen])
  @@index([type])
  @@map("notifications")
}
